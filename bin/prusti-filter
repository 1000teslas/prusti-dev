info() { test -n "$PRUSTI_DEBUG" && >&2 echo -e "[-] ${*}"; }
error() { >&2 echo -e "[!] ${*}"; }

# Get the directory in which this script is contained
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null && pwd )"
info "Executing Prusti script located in '$DIR'"

# Set PRUSTI_FILTER
if [ -x "$DIR/../target/debug/prusti-filter" ]; then
	[[ "$DIR/../target/debug/prusti-filter" -nt "$PRUSTI_FILTER" ]] \
	    && PRUSTI_FILTER="$DIR/../target/debug/prusti-filter"
fi
if [ -x "$DIR/../target/release/prusti-filter" ]; then
	[[ "$DIR/../target/release/prusti-filter" -nt "$PRUSTI_FILTER" ]] \
	    && PRUSTI_FILTER="$DIR/../target/release/prusti-filter"
fi
if [ -z "$PRUSTI_FILTER" ]; then
	error "Unable to find PRUSTI_FILTER."
	error "It looks like Prusti has not been compiled or installed properly."
	exit 1
else
    info "Using PRUSTI_FILTER '$PRUSTI_FILTER'"
fi

info "Arguments: $@"
info "Run Prusti-filter...\n"
exec "${PRUSTI_FILTER}" "$@"
